{
  "compilerOptions": { 
    "target": "es2017",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch":true,
    "noImplicitThis":true,
    "noImplicitReturns":true,
    "sourceMap": true,
    "noEmitOnError": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "compileOnSave": true, 
  "exclude": [
    "node_modules"
  ]
}
